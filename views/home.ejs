
<h1>
            Codeial / <%= title %>
</h1>

<section id="feed-posts">
    <h4>Posts</h4>
    <% if (locals.user) {%>
    <form action="/posts/create" id="new-post-form" method="POST">
        <textarea name="content" id="" cols="30" rows="3"></textarea>
        <input type="submit" value="Post">
    </form>
    <%}%>
    <div id="post-list-container">
        <ul>
            <%for (post of posts){%>
             <li>
                 <%=post.content%>
                 <%=post.user.name%>
                 <ul>
                 <li>
                    <%=post.user.createdAt%>
                 </li>
                 </ul>
             </li>
            <%}%>
        </ul>
    </div>
</section>